<h1>Products</h1>

<table class="table table-striped table-bordered table-hover">
   <thead class="table-dark">
      <tr>
         <th>code</th>
         <th>Name</th>
         <th>Unit ism</th>
         <th>Price</th>
         <th>>Expiry date to</th>
         <th colspan="3" style="text-align:center;"></th>
      </tr>
   </thead>

   <tbody>
   <% @products.each do |product| %>
   <tr>
      <td><%=product.code %></td>
      <td><%=product.product_name %></td>
      <td><%=product.unit_ism  %></td>
      <td><%=product.price %></td>
      <td><%=product.expiry_date_to %></td>
      <td><%= link_to 'Show', product, class:"btn btn-dark" %></td>
      <td><%= link_to 'Edit', edit_product_path(product),class:"btn btn-dark" %></td>
      <td><%= link_to 'Destroy', product, method: :delete,
         data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %></td>
   </tr>
   <% end %>
   </tbody>
</table>
<br/>
<%= link_to "New product", new_product_path, class:"btn btn-secondary" %>
