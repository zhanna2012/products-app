<div class="mt-4 p-5 bg-light rounded">
  <h1 class="display-4">
    <%= @product.product_name %>
  </h1>
  <p class="lead">
    Code: <%= @product.code %> |
    <%= @product.unit_ism %> 
  </p>
  <hr class="my-4">
  <p>
    <strong>Price:</strong> <%= @product.price %> |
    <strong>Expiry date to:</strong> <%= @product.expiry_date_to %>
  </p>
  <br/><br/>
  <div>
    <%= link_to "Edit", edit_product_path(@product), class:"btn btn-secondary" %> 
    <%= link_to "Back", products_path, class:"btn btn-dark" %>
    <br/><br/>  
    <%= button_to "Destroy", @product, method: :delete, class:"btn btn-danger" %> 
  </div>
</div>