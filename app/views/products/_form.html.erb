<%= form_with(model: product) do |form| %>
  <% if product.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :code, style: "display: block" %>
    <%= form.number_field :code %>
  </div>

  <div class="mb-3">
    <%= form.label :product_name, style: "display: block" %>
    <%= form.text_field :product_name %>
  </div>

  <div class="mb-3">
    <%= form.label :unit_ism, style: "display: block" %>
    <%= form.text_field :unit_ism %>
  </div>

  <div class="mb-3">
    <%= form.label :price, style: "display: block" %>
    <%= form.text_field :price %>
  </div>

  <div class="mb-3">
    <%= form.label :expiry_date_to, style: "display: block" %>
    <%= form.datetime_field :expiry_date_to %>
  </div>

  <div>
    <%= form.submit class:'btn btn-secondary'%>
  </div>
<% end %>
